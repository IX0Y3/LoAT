#!/bin/bash
HELP=0
if (( $# == 2 )); then
    TO=$2
    BENCH="2023"
elif (( $# == 3 )); then
    TO=$2
    BENCH=$3
else
    HELP=1
    echo "wrong number of arguments"
fi
if [ "$1" = "--help" ]; then
    HELP=1
elif [ "$1" != "loat_abmc_b" ] && [ "$1" != "loat_abmc" ] && [ "$1" != "loat_bmc" ] && [ "$1" != "loat_adcl" ] && [ "$1" != "spacer" ] && [ "$1" != "z3_bmc" ] && [ "$1" != "golem_tpa" ] && [ "$1" != "golem_bmc" ] && [ "$1" != "eldarica_cegar" ] && [ "$1" != "eldarica_sym" ]; then
    echo "unsupported tool name"
    HELP=1
fi
if [ "$BENCH" != "short" ] && [ "$BENCH" != "2023" ]; then
    echo "unsupported benchmark set"
    HELP=1
fi
if (( $HELP == 1 )); then
    echo "usage: run_all SOLVER TIMEOUT [BENCHMARKS]"
    echo "       where"
    echo "           SOLVER = loat_abmc_b | loat_abmc | loat_bmc | loat_adcl | spacer | z3_bmc | golem_tpa | golem_bmc | eldarica_cegar | eldarica sym"
    echo "           BENCHMARKS = 2023 | short"
    echo "       The timeout is given in seconds."
    echo "       If BENCHMARKS is omitted, then it defaults to 2023."
else
    CMD="./run_$1"
    SAT=0
    UNSAT=0
    UNKNOWN=0
    for FILE in ../examples/$BENCH/*.smt2; do
        echo $FILE
        RES=`$CMD $FILE $TO 2> /dev/null | head -n 1`
        if [ -z "$RES" ]; then
            UNKNOWN=$((UNKNOWN+1))
            echo "unknown"
        else
            if [ "$RES" == "sat" ]; then
                SAT=$((SAT+1))
            elif [ "$RES" == "unsat" ]; then
                UNSAT=$((UNSAT+1))
            else
                UNKNOWN=$((UNKNOWN+1))
            fi
            echo $RES
        fi
    done
    echo "unsat: $UNSAT";
    echo "sat: $SAT";
    echo "unknown: $UNKNOWN";
fi
