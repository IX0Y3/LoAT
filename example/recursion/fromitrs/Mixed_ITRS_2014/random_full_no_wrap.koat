(GOAL COMPLEXITY)
(VAR x y)
(RULES
random((x)) -> rand((x), (0)) :|: x>=0
rand((x), (y)) -> y :|: y>=0 && x>=0 && x==0
rand((x), (y)) -> rand((-1+x), id_inc((y))) :|: y>=0 && x>=0 && x>0
rand((x), (y)) -> rand((1+x), id_dec((y))) :|: y>=0 && x>=0 && 0>x
id_inc((x)) -> x :|: x>=0
id_inc((x)) -> 1+x :|: x>=0
id_dec((x)) -> x :|: x>=0
id_dec((x)) -> -1+x :|: x>=0
)
